<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>

  <% if user_signed_in? %>
  	<%= link_to "Sign out", destroy_user_session_path, method: :delete %> | <%= "#{current_user.first_name} #{current_user.last_name}" %> | <%= link_to "#{current_user.organization.name}", decks_path %>
  <% else %>
  	<%= link_to "Sign in", new_user_session_path %>
  <% end %>

<%= yield %>

</body>
</html>
