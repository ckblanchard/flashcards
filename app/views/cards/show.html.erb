
<h2>Deck: <%= @card.deck.name %></h2>

<div id="card-holder">

	<div id="card">
    <p>
  	  <b>Term:</b>
	   <%= @card.term %>
    </p>
  </div>

  <div id="flipButtons">
    <a id="definition" class="flipButton" href="#">Answer</a>
    <a id="hint" class="flipButton" href="#">Need a hint?</a>
    <a id="revert" class="flipButton" href="#">Revert</a>
  </div> <!-- end flipButtons -->

</div> <!-- end card-holder -->

<!-- Guess radio buttons -->
<div>
<%= form_for(@guess) do |f| %>
	<%= hidden_field(:guess, :card_id) %>
	<%= f.label :correct, "Correct", :value => "true" %>
	<%= f.radio_button :correct, "true" %>
	<%= f.label :correct, "Incorrect", :value => "false" %>
	<%= f.radio_button :correct, "false" %>
	<%= f.submit %>
<% end %>
</div>
<!-- End guess radio buttons -->


  <div id="hidden-cards">
	<div id="card-definition">
    <p>
  	  <b>Definition:</b>
  	  <%= @card.definition %>
    </p>
	</div> <!-- end card-definition -->

  	<div id="card-hint">
      <p>
    	  <b>Hint:</b>
    	  <%= @card.hint %>
      </p>
  	</div> <!-- end card-hint -->


  </div> <!-- end hidden cards -->


