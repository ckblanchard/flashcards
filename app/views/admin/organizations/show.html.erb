<h1>Control panel</h1>
<h3><%= @organization.name %></h3>


<h3>List of users</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Stats (to come)</th>
  </tr>
<% @organization.users.each do |user| %>
  <tr>
  <td><%= "#{user.first_name} #{user.last_name}" %></td>
  </tr>
<% end %>
</table>
<%= link_to "Invite a new user", new_user_invitation_path %>
<br>
