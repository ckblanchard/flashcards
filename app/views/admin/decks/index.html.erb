<h1>Your decks from <%= current_admin.organization.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% current_admin.organization.decks.each do |deck| %>
  <tr>
    <td><%= link_to deck.name, admin_deck_path(deck) %></td>
    <td><%= deck.description %></td>
    <td><%= link_to 'Edit deck', edit_admin_deck_path(deck) %></td>
    <td><%= link_to 'Delete card', admin_deck_path(@deck), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Deck', new_admin_deck_path %>
