<h1><%= @organization.name %> decks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Organization</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @organization.decks.each do |deck| %>
  <tr>
    <td><%= link_to deck.name, deck %></td>
    <td><%= deck.organization.name %></td>
    <td></td>
    <td><%= link_to 'Edit', edit_deck_path(deck) if user_signed_in? %></td>
    <td><%= link_to 'Delete deck', deck, method: :delete, data: { confirm: 'Are you sure?' } if user_signed_in? %></td>
  </tr>
<% end %>
</table>

<br />

